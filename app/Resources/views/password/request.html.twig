{% extends 'base.html.twig' %}
{% block body %}
    <form>
        <label for="email">Email</label>
        <input id="email" type="text" name="email" />
        <input id="btn_resend_email" type="button" value="发送" />
        <div id="message"></div>
    </form>
{% endblock %}
{% block javascripts %}
<script>
    $(document).ready(function(){
        $('#btn_resend_email').on('click', function(){
            var email = $('#email').val();
            if (valid(email)) {
                send(email);
            }
        });
    });

    function valid(email) {
        $('#message').html("");

        if ($.trim(email) == "") {
            $('#message').html('请输入邮箱地址');
            return false;
        }

        if(!email.match(/^([a-zA-Z0-9_-])+@([a-zA-Z0-9_-])+((\.[a-zA-Z0-9_-]{2,3}){1,2})$/)) {
            $('#message').html('请输入有效的邮箱地址');
            return false;
        }

        return true;
    }

    function send(email) {
        $.ajax({
            type: 'POST',
            url: '{{ path('user_password_send_email') }}',
            data: 'email=' + email,
            dataType: 'JSON'
        }).done(function(data){
            countdown();
        }).fail(function(data){
            $('#message').html(data.responseJSON.message);
        });
    }

    var wait_seconds = 60;
    function countdown() {
        if (wait_seconds == 0) {
            $('#btn_resend_email').removeAttr("disabled");
            $('#btn_resend_email').attr("value", "重新发送");
            wait_seconds = 60;
        } else {
            $('#btn_resend_email').attr("disabled", true);
            $('#btn_resend_email').attr("value", "重新发送(" + wait_seconds + ")");
            wait_seconds--;
            setTimeout(function(){
                countdown();
            }, 1000);
        }
    }
</script>
{% endblock %}
